<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    tools:context=".fragments.SettingsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/settingsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Settings"
            android:textSize="30sp"
            android:textColor="@color/dark"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/UpdateUserNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingsTxt"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Update Username"
            android:textSize="20sp"
            android:textColor="@color/dark"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextNewUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/UpdateUserNameTxt"
            android:hint="New Username"/>
        <Button
            android:id="@+id/buttonUpdateUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextNewUsername"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/btn"
            android:textStyle="bold"
            android:text="Update Username"/>
        <TextView
            android:id="@+id/UpdatePasswordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonUpdateUsername"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Update Password"
            android:textSize="20sp"
            android:textColor="@color/dark"
            android:textStyle="bold" />
        <!-- Developer Icon -->
        <ImageView
            android:id="@+id/devIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_above="@id/dev"
            android:src="@drawable/baseline_logo_dev_24"
            app:tint="@color/black" />

        <!-- Developer Name -->
        <TextView
            android:id="@+id/dev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="18dp"
            android:text="Developed By Deneth Sachintha"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/btn"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/baseline_logout_24"
        app:iconSize="25dp"
        app:iconTint="@color/white" />

</FrameLayout>
